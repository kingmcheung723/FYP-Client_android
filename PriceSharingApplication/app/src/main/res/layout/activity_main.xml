<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:textColor="#ffffffff"
        android:id="@+id/Category_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:background="@drawable/background"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:textSize="25dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="434dp"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="76dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton3"
            android:src="@drawable/ic_button_category"
            android:layout_gravity="bottom" />

        <ImageButton
            android:layout_width="76dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton2"
            android:src="@drawable/ic_button_search"
            android:layout_gravity="bottom" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton"
            android:src="@drawable/ic_button_barcode"
            android:layout_gravity="bottom" />

        <ImageButton
            android:layout_width="76dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton5"
            android:src="@drawable/ic_button_recommend"
            android:layout_gravity="bottom" />

        <ImageButton
            android:layout_width="76dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton4"
            android:src="@drawable/ic_button_member"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom" />

    </LinearLayout>

</RelativeLayout>
